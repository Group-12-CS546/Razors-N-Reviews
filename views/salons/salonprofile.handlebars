<main>

    <div class="card-deck">
        <div class="col-sm-6">
            <div class="card" style="width: 18rem;">
                <div class="card-body" id="redbox">
                    <form id="login" action="/salons/{{this.salonId}}/delete" method="POST">
                        <div class="dropdown">
                            <button class="dropbtn">Options</button>
                            <div class="dropdown-content">
                                {{!-- <p><a href="/reviews/{{this.review._id}}/edit">Edit Review</a></p>
                                <p><a href="../sal/{{this.restaurant._id}}/{{this.review._id}}/delete">Delete Review</a>
                                </p>
                                {{!-- <p><a href="/salons/{{this.salonId}}/delete">Delete Salon</a></p> --}}
                                <p><a href="/salons/{{this.salonId}}/delete">Delete Salon</a></p>
                                <p><a href="/salons/{{this.salonId}}/edit">Edit Salon</a></p>
                            </div>
                        </div>
                    </form>
                    <h1>Salon Details</h1>

                    {{!-- <h5 class="card-title"><a href="/salons/{{salonId._id}}">{{this.name}}</a></h5> --}}
                    <p class="card-text bold-id">Name: {{this.name}}</p>
                    <p class="card-text bold-id">Website: {{this.website}}</p>
                    <p class="card-text bold-id">Service: {{this.service}}</p>
                    <p class="card-text bold-id">Address: {{this.address}}</p>
                    <p class="card-text bold-id">City: {{this.city}}</p>
                    <p class="card-text bold-id">State: {{this.state}}</p>
                    <p class="card-text bold-id">Zip: {{this.zip}}</p>
                    <p class="card-text bold-id">Longitude: {{this.longitude}}</p>
                    <p class="card-text bold-id">Latitude: {{this.latitude}}</p>
                    <p class="card-text bold-id">Rating: {{this.rating}}</p>
                    <p class="card-text bold-id">CovidRating: {{this.covidRating}}</p>
                    {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
                </div>

            </div>
        </div>

    </div>


    <div class="card-deck">
        <div class="col-sm-6">
            <div class="card" style="width: 25rem;">
                <div class="card-body">
                    <h1>Given Reviews</h1>
                    {{!-- <h5 class="card-title"><a href="/salons/{{salonId._id}}">{{this.name}}</a></h5> --}}
                    {{#each this.getReviews}}
                    <div class="card car">

                        {{!-- <p class="card-text">reviewText: {{this._id}}</p> --}}
                        <div class="never">
                            <p class="card-text">reviewText: {{this.reviewText}}</p>
                            <p class="card-text">rating: {{this.rating}}</p>
                            <p class="card-text">covidRating: {{this.covidRating}}</p>
                            <div class="likea">
                                <p><a class="btn btn-primary update"
                                        href="/reviews/reviews/updatereview/{{this._id}}">Edit</a></p>
                                <p><a class="btn btn-danger update"
                                        href="/reviews/reviews/deletereview/{{this._id}}">Delete</a></p>

                            </div>
                        </div>
                        <script src="https://use.fontawesome.com/fe459689b4.js"></script>
                        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                        <div class="likea">
                            <a class="like"><i class="fa fa-thumbs-o-up"></i>
                                <label for="like"></label>
                                Like <input id="like" class="qty1" name="qty1" readonly="readonly" type="text"
                                    value="0" />
                            </a>
                            <a class="dislike"><i class="fa fa-thumbs-o-down"></i>
                                <label for="dislike"></label>
                                Dislike <input id="dislike" class="qty2" name="qty2" readonly="readonly" type="text"
                                    value="0" />
                            </a>
                        </div>

                        <script src="/public/javascript/like.js"></script>
                        {{!-- <p><a href="/reviews/reviews/updatereview/{{this._id}}">Edit Review</a></p>
                        <p><a href="/reviews/reviews/deletereview/{{this._id}}">Delete Review</a></p> --}}


                        <div class="card-text">
                            <h1 class="card-text">Comments</h1>
                            {{#each this.commentTexts}}
                            <ul>
                                <li>
                                    <p>{{this}}</p>
                                </li>

                            </ul>
                            {{/each}}

                            <div class="center">
                                <h2>Post a comment</h2>
                                <form action="/comments/add/{{this._id}}" method="POST" class="new-comment-form">
                                    <div class="form-group">
                                        <label for="comment">Comment:</label>
                                        <input id="comment" type="text" class="form-control" name="commentText"
                                            placeholder="Enter a comment....">

                                    </div>
                                    <label for="submit">Submit</label>
                                    <button id="submit" class="btn btn-primary" type="submit">Submit</button>
                                </form>
                            </div>
                            <div>
                                <h1>Covid Review</h1>
                                <form action="/covidReviews/{{this._id}}/add" method="POST"
                                    class="new-covidReview-form">
                                    <div class="form-group">
                                        <label for="hygiene">Hygiene:</label>
                                        <input id="hygiene" type="text" class="form-control" name="Parameter1"
                                            placeholder="Enter a value between 1 and 5">

                                    </div>
                                    <div class="form-group">
                                        <label for="cleanliness">Cleanliness:</label>
                                        <input id="cleanliness" type="text" class="form-control" name="Parameter2"
                                            placeholder="Enter a value between 1 and 5">

                                    </div>
                                    <div class="form-group">
                                        <label for="mask">Everybody Wearing a mask:</label>
                                        <input id="mask" type="text" class="form-control" name="Parameter3"
                                            placeholder="Enter a value between 1 and 5">

                                    </div>
                                    <div class="form-group">
                                        <label for="sanitation">Sanitation:</label>
                                        <input id="sanitation" type="text" class="form-control" name="Parameter4"
                                            placeholder="Enter a value between 1 and 5">

                                    </div>
                                    <div class="form-group">
                                        <label for="social">Social Distancing:</label>
                                        <input id="social" type="text" class="form-control" name="Parameter5"
                                            placeholder="Enter a value between 1 and 5">

                                    </div>
                                    <label for="submit">Submit</label>
                                    <button id="submit" class="btn btn-primary" type="submit">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
            </div>
        </div>
    </div>

    {{!-- <div class="dblclick container">
        {{#if (checkListMem ../customer._id this.likes)}}
        <i class="likebtn fa fa-thumbs-up filled" data-rid="{{this.id}}" data-uid="{{../customer._id}}"></i>
        {{else}}
        <i class="likebtn fa fa-thumbs-up" data-rid="{{this.id}}" data-uid="{{../customer._id}}"></i>
        {{/if}}
        <span class="like">{{this.like.length}}</span>
        {{#if (checkListMem ../customer._id this.dislikes)}}
        <i class="dislikebtn fa fa-thumbs-down filled" data-rid="{{this.id}}" data-uid="{{../customer._id}}"></i>
        {{else}}
        <i class="dislikebtn fa fa-thumbs-down" data-rid="{{this.id}}" data-uid="{{../customer._id}}"></i>
        {{/if}}
        <span class="dislike">{{this.dislike.length}}</span>
    </div> --}}








    <div class="container" id="review-pan">
        <h1>Review </h1>
        <form class="center padding" action="/reviews/reviews/{{this.salonId}}" method="POST">
            <div class="form-group">
                <label for="rating">Rating:</label>
                <input type="text" class="form-control" id="rating" name="rating" aria-describedby="rating"
                    placeholder="Rating">
            </div>
            <div class="form-group">
                <label for="reviewText">ReviewText:</label>
                <input type="text" class="form-control" id="reviewText" name="reviewText" aria-describedby="reviewText"
                    placeholder="reviewText">
            </div>
            <label for="btn-id"></label>
            <button type="submit" id="btn-id" class="btn btn-primary">Submit</button>
        </form>
        {{#if errorcode}}

        <p class="error">{{message}}</p>
        {{/if}}

    </div>



