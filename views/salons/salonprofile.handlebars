    <div class="card-deck">
        <div class="col-sm-6">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h1>Given Reviews</h1>
                    {{!-- <h5 class="card-title"><a href="/salons/{{salonId._id}}">{{this.name}}</a></h5> --}}
                    {{#each this.getReviews}}
                    {{!-- <p class="card-text">reviewText: {{this._id}}</p> --}}
                    <p class="card-text">reviewText: {{this.reviewText}}</p>
                    <p class="card-text">rating: {{this.rating}}</p>
                    <p class="card-text">covidRating: {{this.covidRating}}</p>
                    <p><a href="/reviews/reviews/updatereview/{{this._id}}">Edit Review</a></p>
                    <p><a href="/reviews/reviews/deletereview/{{this._id}}">Delete Review</a></p>
                      <script src="https://use.fontawesome.com/fe459689b4.js"></script>
                      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
                    <div class="container">
                        <a class="like"><i class="fa fa-thumbs-o-up"></i>
                            Like <input class="qty1" name="qty1" readonly="readonly" type="text" value="0" />
                        </a>
                        <a class="dislike"><i class="fa fa-thumbs-o-down"></i>
                            Dislike <input class="qty2" name="qty2" readonly="readonly" type="text" value="0" />
                        </a>
                    </div>

                    <script src="/public/javascript/like.js"></script>
                    {{!-- <p><a href="/reviews/reviews/updatereview/{{this._id}}">Edit Review</a></p>
                    <p><a href="/reviews/reviews/deletereview/{{this._id}}">Delete Review</a></p> --}}


                    <div class="card-text">
                        <h1 class="card-text">Comments</h1>
                        {{#each this.commentTexts}}
                        <p>{{this}}</p>
                        {{/each}}
                        <div class="center">
                            <h2>Post a comment</h2>
                            <form action="/comments/add/{{this._id}}" method="POST" class="new-comment-form">
                                <div class="form-group">
                                    <label for="commentText">Comment:</label>
                                    <input type="text" class="form-control" name="commentText"
                                        aria-describedby="commentText" placeholder="Enter a comment....">

                                </div>
                                <button type="submit">Submit</button>
                            </form>
                        </div>
                        <div>
                            <h1>Covid Review</h1>
                            <form action="/covidReviews/{{this._id}}/add" method="POST" class="new-covidReview-form">
                                <div class="form-group">
                                    <label for="Parameter1">Hygiene:</label>
                                    <input type="text" class="form-control" name="Parameter1"
                                        placeholder="Enter a value between 1 and 5">

                                </div>
                                <div class="form-group">
                                    <label for="Parameter2">Cleanliness:</label>
                                    <input type="text" class="form-control" name="Parameter2"
                                         placeholder="Enter a value between 1 and 5">

                                </div>
                                <div class="form-group">
                                    <label for="Parameter3">Everybody Wearing a mask:</label>
                                    <input type="text" class="form-control" name="Parameter3"
                                         placeholder="Enter a value between 1 and 5">

                                </div>
                                <div class="form-group">
                                    <label for="Parameter4">Sanitation:</label>
                                    <input type="text" class="form-control" name="Parameter4"
                                         placeholder="Enter a value between 1 and 5">

                                </div>
                                <div class="form-group">
                                    <label for="Parameter5">Social Distancing:</label>
                                    <input type="text" class="form-control" name="Parameter5"
                                         placeholder="Enter a value between 1 and 5">

                                </div>
                                <button type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                    {{/each}}
                    {{!-- <a href="#" class="btn btn-primary">Go somewhere</a> --}}
                </div>
            </div>
        </div>
    </div>

