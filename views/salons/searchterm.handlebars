<main>

    {{#each data}}
    <div class="card-deck">
        <div class="col-sm-6">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top">
                <div class="card-body">
                    <h1>List Salons</h1>
                    <h5 class="card-title"><a href="/salons/{{this._id}}">{{this.name}}</a></h5>
                    <p class="card-text">{{this.address}}</p>
                    <p class="card-text">Service: {{this.service}}</p>
                    <p class="card-text">City: {{this.city}} &nbsp;&nbsp;&nbsp;&nbsp;Rating: {{this.rating}}</p>

                </div>
            </div>
        </div>
    </div>
    {{/each}}
    {{#if data}}
    {{!-- <ul>
        {{#each data}}
        <li>
            <a style="color: white;" href="/salons/">{{this.data}}</a>
        </li>
        {{/each}}
    </ul> --}}
    {{else}}
    <h1 class="not-found">We're sorry, but no results were found {{this.name}}.Please search again</h1>
    {{/if}}



    <a class="btn btn-primary" href="/logout">Logout</a>
</main>