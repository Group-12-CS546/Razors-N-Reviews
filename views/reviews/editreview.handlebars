<main>
    <br>
    {{!-- {{reviewId}} {{reviewText}} --}}
    <div class="card-wide" id="right">
        <h2>Edit Review</h2>
        <form if="editreview" action="/reviews/editreview/{{this.reviewId}}" enctype="multipart/form-data" method="post">
            <label for="reviewText"><h4>Review Text</h4>
                <input type="text" id="reviewText" name="reviewText" value="{{this.reviewText}}" class="inputFields">
            </label>
            {{!-- <input type="file" name="picture" accept="image/*" class=""/> --}}
            <button type="submit" class="btn">Confirm</button>
        </form>
    </div>
    <div>
        {{#if hasError}}
        <div class="error">
            <ul>
                {{#each error}}
                    <li>
                        {{this}}
                    </li>
                {{/each}}
            </ul>
        </div>
        {{/if}}
    </div>
</main>