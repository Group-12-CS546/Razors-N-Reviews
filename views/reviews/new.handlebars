<div class="center">
    <p><a href="/salons">Go back to Salon list page</a></p>
    <h1>Review of One Salon</h1>
    <main>
        <form action="/reviews/{{salonId._id}}" method="POST" class="new-post-form">
            <label>
                {{ this.salonId }}
                <input type="text" reviewText="Text" placeholder="Enter Review" value="{{this.reviewText}}"
                    class="full-width-input" />
            </label>
            <button type="submit">Submit</button>
        </form>
    </main>
    <a class="btn btn-primary" href="/logout">Logout</a>
</div>